<div id='backend_upload'>
  <h1>New Photo</h1>
  <h2>Image file is uploaded through the server</h2>
  <%= form_for(@picture, :url => pictures_path) do |f| %>

    <div class="form_line">
      <%= f.label :pic_img, "Image:" %>
      <div class="form_controls">
        <%= f.file_field :pic_img %>
        <%= f.label :title %>
        <%= f.text_field :title %><br />
        <%= f.hidden_field(:pic_img_cache) %>
        <%= f.label :tag_list %>
        <%= f.text_field :tag_list %>
      </div>
    </div>
    <div class="form_line">
      <div class="form_controls">
        <%= f.submit "Submit Photo" %>
      </div>
    </div>
  <% end %>
</div>
