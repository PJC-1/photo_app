<div class="container">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">
      <div class="light-well">
        <h2 class="page-header text-center">Upload a New Photo</h2>

          <%= form_for(@picture, :url => pictures_path) do |f| %>
            <div class="fileinput fileinput-new input-group" data-provides="fileinput">
              <div class="form-control" data-trigger="fileinput">
                <i class="glyphicon glyphicon-file fileinput-exists"></i>
                <span class="fileinput-filename"></span>
              </div>
              <span class="input-group-addon btn btn-trans btn-file"><span class="fileinput-new">Select file</span>
              <span class="fileinput-exists">Change</span><%= f.file_field :pic_img %></span>
              <a href="#" class="input-group-addon btn btn-trans fileinput-exists" data-dismiss="fileinput">Remove</a>
            </div>

            <div class="form-group">
              <%= f.text_field :title, placeholder: "Enter Title", class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.hidden_field(:pic_img_cache) %>
            </div>

            <div class="form-group">
              <%= f.text_field :tag_list, placeholder: "Enter tags separated by a coma", class: "form-control" %>
            </div>

            <div class="actions">
              <%= f.submit "Submit Photo", class: "btn btn-success btn-ls btn-block" %>
            </div>

          <% end %>

      </div>
    </div>
  </div>
</div>
