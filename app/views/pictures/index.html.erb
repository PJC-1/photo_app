<div class="container">
  <div class="text-center">
    <div id="upload-img">
      <%= button_to new_picture_path, method: :get, class: "btn btn-lg btn-trans" do %>
       <span class="glyphicon glyphicon-cloud-upload">
      <% end %>
    </div>
    <form class="navbar-form" role="search">
      <div class="form-group">
        <%= form_tag(pictures_path, :method => "get", id: "search-form") do %>
        <%= text_field_tag :tag, params[:tag], type: "text", class: "form-control", placeholder: "Search For Tags" %>
      </div>
        <%= submit_tag "Search",class: "btn btn-default", :name => nil %>
        <% end %>
    </form>
  </div>
  <hr>
  <br>
  <br>
  <div id="picz" class="transitions-enabled">
    <% @pictures.each do |picture| %>
    <div class="box">
      <%= link_to cl_image_tag(picture.pic_img_url), "/pictures/#{picture.id}" %>
    </div>
    <% end %>
  </div>
</div>


<div class="next-page text-center">
  <%= will_paginate(@pictures) %>
</div>
