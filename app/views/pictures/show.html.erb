<h1>Pictures#show</h1>
<%= link_to "News Feed", pictures_path, class: "btn btn-default" %>
<%= link_to "Home", root_path, class: "btn btn-default" %>
<br>
<br>



<article class="index-1 col-md-10 col-md-offset-1">
  <div class="row">
    <section class="teaserShow col-md-4">
      <h5>Images</h5>
      <div class="picture-container">
        <%= cl_image_tag(@picture.pic_img_url, :width => 500, :height => 500, :crop => :fill) %>
      </div>
        <%= button_to "Delete Image", picture_path(@picture), data: {:confirm=>'Are you sure you want to delete this comment?'},method: :delete, class: "btn btn-small btn-danger" %>
        <%= link_to "Add Comment", new_picture_comment_path(@picture),:class =>"btn btn-small btn-primary" %>
    </section>
  </div>
</article>

<div class="container">
  <div class="col-md-6">
    <h4><strong>Comments:</strong>
      <% @comments.each do |c| %></h4>
        <table class="table table-striped">
          <tbody>
            <tr>
              <th>Text:</th>
              <td><%= c.post %></td>
            </tr>
            <tr>
              <th>Written By:</th>
              <td><%= @user.email %></td>
            </tr>
          </tbody>
        </table>
        <br>
        <%= button_to "Delete Comment", "/pictures/#{@picture.id}/comments/#{c.id}", data: {:confirm=>'Are you sure you want to delete this comment?'}, method: :delete, class: "btn btn-small btn-danger" %>
        <%= button_to "Edit Comment", edit_picture_comment_path(@picture,c), method: :get, class: "btn btn-small btn-warning" %>
        <br>
      <% end %>
        <br>
  </div>
</div>
