<h1>Pictures#show</h1>
<%= link_to "Back", pictures_path, class: "btn btn-default" %>
<br>
<br>
<article class="index-1 col-md-10 col-md-offset-1">
  <div class="row">
    <section class="teaserShow col-md-4">
      <h5>Images</h5>
      <div><img src="<%= @picture.pic_img_url %>" class="img-responsive"></div>
      <%= link_to "Add Comment", new_picture_comment_path(@picture),:class =>"btn btn-small btn-primary" %>
    </section>
  </div>
</article>

<div class="container">
  <div class="col-md-6">
    <h4><strong>Comments:</strong>
      <% @comments.each do |c| %></h4>
      <table class="table table-striped">
        <tbody>
          <tr>
            <th>Text:</th>
            <td><%= c.post %></td>
          </tr>
          <tr>
            <th>Written By:</th>
            <td><%= @user.email %></td>
          </tr>
        </tbody>
      </table>
      <br>

        <br>
        <% end %>
        <br>
      </div>
    </div>
